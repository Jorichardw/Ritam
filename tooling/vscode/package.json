{
    "name": "ritam-vscode",
    "displayName": "Ritam Language Support",
    "description": "Syntax highlighting, snippets, and LSP integration for Ritam - the multilingual programming language",
    "version": "0.2.2",
    "publisher": "ritam",
    "repository": {
        "type": "git",
        "url": "https://github.com/RichardWilliyam/ritam"
    },
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Linters"
    ],
    "keywords": [
        "ritam",
        "tamil",
        "hindi",
        "telugu",
        "kannada",
        "malayalam",
        "spanish",
        "multilingual",
        "programming language",
        "native language"
    ],
    "activationEvents": [
        "onLanguage:ritam"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "ritam",
                "aliases": [
                    "Ritam",
                    "ritam",
                    "rvx"
                ],
                "extensions": [
                    ".rvx",
                    ".ritam"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./icon.png",
                    "dark": "./icon.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "ritam",
                "scopeName": "source.ritam",
                "path": "./syntaxes/ritam.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "ritam",
                "path": "./snippets/ritam.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Ritam",
            "properties": {
                "ritam.language": {
                    "type": "string",
                    "default": "Tamil",
                    "enum": [
                        "Tamil",
                        "Hindi",
                        "Telugu",
                        "Kannada",
                        "Malayalam",
                        "Spanish",
                        "English"
                    ],
                    "description": "Default language for Ritam development"
                },
                "ritam.compilationTarget": {
                    "type": "string",
                    "default": "node",
                    "enum": [
                        "node",
                        "web",
                        "mobile",
                        "react-native"
                    ],
                    "description": "Default compilation target"
                },
                "ritam.enableLSP": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Language Server Protocol for real-time error checking"
                }
            }
        },
        "commands": [
            {
                "command": "ritam.compile",
                "title": "Ritam: Compile Current File"
            },
            {
                "command": "ritam.run",
                "title": "Ritam: Run Current File"
            },
            {
                "command": "ritam.init",
                "title": "Ritam: Initialize New Project"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "node build.js",
        "watch": "node build.js --watch"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.70.0",
        "esbuild": "^0.27.2",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.0"
    }
}