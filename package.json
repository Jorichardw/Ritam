{
  "name": "ritam",
  "version": "0.2.3",
  "description": "A universal, native-language functional programming language for the web",
  "main": "dist/tooling/cli/index.js",
  "bin": {
    "ritam": "dist/tooling/cli/index.js",
    "ritam-lsp": "dist/tooling/lsp/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register tooling/cli/index.ts",
    "build": "tsc && tsc-alias && npm run copy-locales",
    "copy-locales": "npx copyfiles -u 1 \"assets/locales/**/*\" dist/",
    "start": "node dist/tooling/cli/index.js",
    "prepublishOnly": "npm run build",
    "test": "node dist/tooling/cli/index.js run tests/conformance.rvx --lang Tamil",
    "test:conformance": "node dist/tooling/cli/index.js run tests/conformance.rvx --lang Tamil",
    "test:web-model": "node dist/tooling/cli/index.js run tests/web_v1.rvx --lang Tamil",
    "test:all": "npm run test:unit:all && npm run test:compiler:all && npm run test:edge:all",
    "test:full": "npm run test:all && npm run test:benchmark",
    "test:unit:all": "npm run test:unit:tamil && npm run test:unit:hindi && npm run test:unit:telugu && npm run test:unit:kannada && npm run test:unit:malayalam && npm run test:unit:spanish && npm run test:unit:english",
    "test:unit:tamil": "node dist/tooling/cli/index.js run tests/unit/tamil_keywords.rvx --lang Tamil",
    "test:unit:hindi": "node dist/tooling/cli/index.js run tests/unit/hindi_keywords.rvx --lang Hindi",
    "test:unit:telugu": "node dist/tooling/cli/index.js run tests/unit/telugu_keywords.rvx --lang Telugu",
    "test:unit:kannada": "node dist/tooling/cli/index.js run tests/unit/kannada_keywords.rvx --lang Kannada",
    "test:unit:malayalam": "node dist/tooling/cli/index.js run tests/unit/malayalam_keywords.rvx --lang Malayalam",
    "test:unit:spanish": "node dist/tooling/cli/index.js run tests/unit/spanish_keywords.rvx --lang Spanish",
    "test:unit:english": "node dist/tooling/cli/index.js run tests/unit/english_keywords.rvx --lang English",
    "test:compiler:all": "npm run test:compiler:node && npm run test:compiler:web && npm run test:compiler:mobile && npm run test:compiler:react-native",
    "test:compiler:node": "node dist/tooling/cli/index.js run tests/compiler/node_target.rvx --lang Tamil",
    "test:compiler:web": "node dist/tooling/cli/index.js compile tests/compiler/web_target.rvx -t web --lang Tamil",
    "test:compiler:mobile": "node dist/tooling/cli/index.js compile tests/compiler/mobile_target.rvx -t mobile --lang Tamil",
    "test:compiler:react-native": "node dist/tooling/cli/index.js compile tests/compiler/react_native_target.rvx -t react-native --lang Tamil",
    "test:edge:all": "npm run test:edge:unicode && npm run test:edge:errors && npm run test:edge:multiword",
    "test:edge:unicode": "node dist/tooling/cli/index.js run tests/edge_cases/unicode_handling.rvx --lang Tamil",
    "test:edge:errors": "node dist/tooling/cli/index.js run tests/edge_cases/error_boundaries.rvx --lang Tamil",
    "test:edge:multiword": "node dist/tooling/cli/index.js run tests/edge_cases/multiword_keywords.rvx --lang Tamil",
    "test:benchmark": "node dist/tooling/cli/index.js run tests/benchmarks/performance.rvx --lang Tamil",
    "test:examples": "npm run test:example:tamil && npm run test:example:hindi && npm run test:example:kannada && npm run test:example:telugu && npm run test:example:malayalam && npm run test:example:spanish",
    "test:example:tamil": "node dist/tooling/cli/index.js run examples/tamil_logic.rvx --lang Tamil",
    "test:example:hindi": "node dist/tooling/cli/index.js run examples/hindi_logic.rvx --lang Hindi",
    "test:example:kannada": "node dist/tooling/cli/index.js run examples/kannada_counter.rvx --lang Kannada",
    "test:example:telugu": "node dist/tooling/cli/index.js run examples/telugu_logic.rvx --lang Telugu",
    "test:example:malayalam": "node dist/tooling/cli/index.js run examples/malayalam_logic.rvx --lang Malayalam",
    "test:example:spanish": "node dist/tooling/cli/index.js run examples/spanish_logic.rvx --lang Spanish",
    "test:compile:web": "node dist/tooling/cli/index.js compile examples/counter_web_app.rvx -t web --lang Tamil",
    "test:compile:mobile": "node dist/tooling/cli/index.js compile examples/mobile_app.rvx -t mobile --lang Tamil",
    "test:compile:react-native": "node dist/tooling/cli/index.js compile examples/react_native_app.rvx -t react-native --lang Tamil",
    "lint": "tsc --noEmit",
    "docs:dev": "vitepress dev ./tooling/docs",
    "docs:build": "vitepress build ./tooling/docs",
    "docs:preview": "vitepress preview ./tooling/docs"
  },
  "keywords": [
    "compiler",
    "programming-language",
    "multilingual",
    "tamil",
    "hindi",
    "telugu",
    "kannada",
    "malayalam",
    "spanish",
    "native-language",
    "transpiler",
    "web",
    "sovereign",
    "india"
  ],
  "author": "Jorichard <richardjava9110@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Joorichardw/Ritam.git"
  },
  "homepage": "https://github.com/Joorichardw/Ritam#readme",
  "bugs": {
    "url": "https://github.com/Joorichardw/Ritam/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^18.0.0",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0",
    "vitepress": "^1.6.4",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vue": "^3.5.26"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "inquirer": "^8.2.5"
  }
}
